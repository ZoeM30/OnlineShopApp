@model IEnumerable<OnlineShopApp.Models.Course>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var course in Model)
    {
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #f3969a; border-radius: 5px;">
					<div class="card">
						<img src="@course.ImageUrl" class="card-img-top rounded" />

						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@course.Title</p>
							</div>
							<div class="pl-1">
								<p>List Price: <strike><b>$@course.Price.ToString("0.00")</b></strike></p>
							</div>

						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-secondary form-control"asp-route-id="@course.Id">
							Details
						</a>
					</div>
				</div>
			</div>
		</div>
    }
</div>
